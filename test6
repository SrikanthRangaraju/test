import java.io.*;
import java.nio.file.*;

public class UpperCaseHeaders {
    public static void main(String[] args) {
        String inputFilePath = "input.csv";  // Replace with your input file path
        String outputFilePath = "output.csv"; // Replace with your output file path

        try (BufferedReader br = new BufferedReader(new FileReader(inputFilePath));
             BufferedWriter bw = new BufferedWriter(new FileWriter(outputFilePath))) {

            // Read the first line (headers)
            String headerLine = br.readLine();
            if (headerLine != null) {
                // Convert headers to uppercase while keeping double quotes
                String upperCaseHeaders = convertHeadersToUpperCase(headerLine);
                bw.write(upperCaseHeaders);
                bw.newLine();
            }

            // Copy the rest of the file as is
            String line;
            while ((line = br.readLine()) != null) {
                bw.write(line);
                bw.newLine();
            }

            System.out.println("Headers converted to uppercase successfully!");

        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    private static String convertHeadersToUpperCase(String headerLine) {
        // Split headers by comma while preserving double quotes
        String[] headers = headerLine.split(",");
        for (int i = 0; i < headers.length; i++) {
            headers[i] = headers[i].toUpperCase(); // Convert to uppercase
        }
        return String.join(",", headers);
    }
}
