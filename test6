SELECT 
    t1.Name AS Employee_Name,
    t1.Age AS Employee_Age,
    t2.Salary AS Employee_Salary,
    t2.Position AS Job_Position,
    t3.Department AS Work_Department
FROM 
    Table1 t1
INNER JOIN 
    Table2 t2 ON t1.SSNID = t2.SSNID
INNER JOIN 
    Table3 t3 ON t1.SSNID = t3.SSNID
WHERE 
    t1.Date = '2023' 
    AND t2.Date = '2023' 
    AND t3.Date = '2023';
